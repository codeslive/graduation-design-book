{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*",
    "./config/**/*",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],

  }
}